{
    "name": "@wildneo/tinvest-mcp",
    "version": "0.0.0",
    "description": "MCP server for T-Invest API",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "tinvest": "./dist/index.js"
    },
    "scripts": {
        "build": "pnpm clean:dist && tsc && pnpm copy:templates",
        "dev": "tsx src/index.ts",
        "copy:templates": "cp -r src/templates dist/templates",
        "clean:dist": "rm -rf ./dist"
    },
    "keywords": [
        "mcp",
        "t-invest",
        "model-context-protocol"
    ],
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.24.3",
        "@wildneo/tinvest-client": "workspace:*",
        "handlebars": "^4.7.8",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "tsx": "^4.21.0"
    }
}
